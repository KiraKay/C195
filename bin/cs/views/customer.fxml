<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="450.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs.controllers.CustomerController">
	<center>
		<TableView fx:id="customerTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="idCol" prefWidth="59.0" text="ID" />
				<TableColumn fx:id="nameCol" minWidth="0.0" prefWidth="92.0" text="Name" />
				<TableColumn fx:id="addressCol" prefWidth="143.0" text="Address" />
				<TableColumn fx:id="postalCol" prefWidth="84.0" text="Postal Code" />
				<TableColumn fx:id="phoneCol" prefWidth="95.0" text="Phone" />
				<TableColumn fx:id="countryCol" prefWidth="99.0" text="Country" />
				<TableColumn fx:id="stateCol" prefWidth="97.0" text="State" />
			</columns>
			<BorderPane.margin>
				<Insets left="10.0" />
			</BorderPane.margin>
		</TableView>
	</center>
	<left>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Id" />
				<Label text="Name" GridPane.rowIndex="1" />
				<Label text="Street Address" GridPane.rowIndex="2" />
				<Label text="Postal Code" GridPane.rowIndex="3" />
				<Label text="Phone" GridPane.rowIndex="4" />
				<Label text="Country" GridPane.rowIndex="5" />
				<Label text="State" GridPane.rowIndex="6" />
				<TextField fx:id="idField" GridPane.columnIndex="1" />
				<TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<TextField fx:id="postalField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
				<TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
				<ComboBox fx:id="countryField" onAction="#updateData" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
				<ComboBox fx:id="stateField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
				<Button mnemonicParsing="false" onAction="#create" text="Create/Update" GridPane.rowIndex="8" />
				<Button alignment="CENTER" mnemonicParsing="false" onAction="#delete" prefHeight="25.0" prefWidth="103.0" text="Delete" GridPane.columnIndex="1" GridPane.rowIndex="8" />
				<Button mnemonicParsing="false" onAction="#select" prefHeight="25.0" prefWidth="94.0" text="Select" GridPane.rowIndex="7" />
            <Button mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="101.0" text="Clear" GridPane.columnIndex="1" GridPane.rowIndex="7" />
			</children>
		</GridPane>
	</left>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<bottom>
		<Button mnemonicParsing="false" onAction="#back" prefHeight="25.0" prefWidth="890.0" text="Back" BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets top="10.0" />
			</BorderPane.margin>
		</Button>
	</bottom>
</BorderPane>
