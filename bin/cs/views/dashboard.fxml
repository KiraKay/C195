<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
	prefWidth="500.0" xmlns="http://javafx.com/javafx/11"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="cs.controllers.DashboardController">
	<top>
		<Label text="Dashboard" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="18.0" />
			</font>
		</Label>
	</top>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<center>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
			<children>
				<Button mnemonicParsing="false" onAction="#customers"
					prefHeight="125.0" prefWidth="110.0" text="Customers" />
				<Button mnemonicParsing="false" onAction="#appointments"
					prefHeight="125.0" prefWidth="110.0" text="Appointments"
					GridPane.columnIndex="1" />
				<Button mnemonicParsing="false" onAction="#reports"
					prefHeight="125.0" prefWidth="110.0" text="Reports"
					GridPane.columnIndex="2" />
				<Button mnemonicParsing="false" onAction="#quit"
					prefHeight="125.0" prefWidth="110.0" text="Quit"
					GridPane.columnIndex="3" />
			</children>
		</GridPane>
	</center>
</BorderPane>
